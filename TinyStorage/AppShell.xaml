<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="TinyStorage.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TinyStorage.Views"
    FlyoutBehavior="Disabled"
    Title="TinyStorage">

    <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent Route="LaboratoryAssistantPage" ContentTemplate="{DataTemplate views:LaboratoryAssistantPage}" />
    <ShellContent Route="AdministratorPage" ContentTemplate="{DataTemplate views:AdministratorPage}" />
    <ShellContent Route="RoleSelectionPage" ContentTemplate="{DataTemplate views:RoleSelectionPage}" />
</Shell>